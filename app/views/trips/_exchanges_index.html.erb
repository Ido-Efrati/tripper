<% # @author Jesika Haria %>

<table class="table table-condensed" >
  <thead>
    <tr>
      <th>Rate</th>
      <th>Units</th>
    </tr>
  </thead>
  <tbody id="exchanges-table">
    <% @trip.exchanges.each do |exchange| %>
      <tr>
        <td><%= exchange.rate %></td>
        <td><%= exchange.units %></td>
        <td><%= link_to 'Edit', edit_exchange_path(exchange) %></td>
        <td><%= link_to 'x', exchange, method: :delete, data: { confirm: 'Are you sure you want to delete ' + exchange.units + '?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
