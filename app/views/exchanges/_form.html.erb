<% # @author Jesika Haria %>

<div class="center" id="new-exchange-form">
<%= token_tag(nil) %>
<%= form_for(@exchange) do |f| %>
  <% if @exchange.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@exchange.errors.count, "error") %> prohibited this exchange from being saved:</h2>

      <ul>
      <% @exchange.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :rate %><br>
    <%= f.text_field :rate, :placeholder => "40" , :id => "rate" , :autofocus => true %>
  </div>
  <div class="field">
    <%= f.label :units %><br>
    <%= f.text_field :units, :placeholder => "Hours driven (per token)", :id => "units", :disabled => @exchange.units=="dollars"%>
  </div>
  <%= f.hidden_field :trip_id, :value => @exchange.trip_id, :id => "trip_id"%>
  <div class="actions">
    <%= f.submit "Save", {:id => 'save-changes', :class => "btn btn-primary"} %>
  </div>
<% end %>
</div>
