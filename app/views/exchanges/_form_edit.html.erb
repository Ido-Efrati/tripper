<% # @author Jesika Haria %>

<div class="span6 offset5 center">
<%= form_for(@exchange) do |f| %>
  <% if @exchange.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@exchange.errors.count, "error") %> prohibited this exchange from being saved:</h2>

      <ul>
      <% @exchange.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :rate %><br>
    <%= f.text_field :rate, :placeholder => "40"  %>
  </div>
  <div class="field">
    <%= f.label :units %><br>
    <%= f.text_field :units, :placeholder => "Hours driven (per token)", :disabled => @exchange.units=="dollars"%>
  </div>
  <%= f.hidden_field :trip_id, value: @exchange.trip_id %>
  <div class="actions">
    <% trip_url = '/trips/' + @exchange.trip_id.to_s; %>
    <%= f.submit "Save", :class => :btn%> <%= link_to 'Back', trip_url, :class => :btn %>

  </div>
<% end %>
</div>